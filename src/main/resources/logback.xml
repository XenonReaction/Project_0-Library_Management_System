<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- =======================
         Properties
         ======================= -->
    <property name="LOG_DIR" value="logs"/>
    <property name="APP_LOG" value="${LOG_DIR}/app.log"/>

    <!-- =======================
         Console Appender
         ======================= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- =======================
         Rolling File Appender
         ======================= -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${APP_LOG}</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily log files -->
            <fileNamePattern>${LOG_DIR}/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 14 days -->
            <maxHistory>14</maxHistory>
            <!-- Total size cap for all archived logs -->
            <totalSizeCap>250MB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- =======================
         Package-based log levels
         ======================= -->

    <!-- Controllers: readable, high signal -->
    <logger name="controller" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Services: detailed flow -->
    <logger name="service" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Repository/DAO: detailed DB work -->
    <logger name="repository" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Utilities: calmer by default (bump to DEBUG when troubleshooting) -->
    <logger name="util" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Optional: if you see JDBC/Postgres spam, you can clamp it down -->
    <!--
    <logger name="org.postgresql" level="WARN"/>
    -->

    <!-- Root: keeps 3rd party libs quiet -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
